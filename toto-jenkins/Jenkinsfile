pipeline {
    agent {
        label "$NODE"
    }
    tools {
        nodejs "NODE22"
    }
    options {
        withFolderProperties()
    }
    stages {
        stage("Pre stage")  {
            steps {
                script {
                    if(params.event != "push") {
                        currentBuild.result = "ABORTED"
                        error("Must be a push event, was: " + params.event)
                    }
                    cleanWs()
                }
            }
        }
        stage("Build presentation") {
            steps {
                sh('node -v')
                sh('npm -v')
                echo "${NODE}"
                echo "${params.event}"
                echo "${params.delivery}"
                echo "${params.hook}"
                echo "${params.trigger}"
            }
        }
    }
    post {
        always {
            script {
                if(params.report) {
                    echo "Sending report..."
                    mail(to: "${MAIL_TO}", subject: "[JENKINS] - ${env.JOB_BASE_NAME} #${env.BUILD_ID} - ${currentBuild.currentResult} ", body: "${env.BUILD_URL}")
                } else {
                    echo "Report disabled, not sending report"
                }
            }
            
        }
    }
}